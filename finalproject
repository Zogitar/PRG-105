import tkinter
import tkinter.messagebox
import pickle
from tkinter.ttk import *


# main (root) GUI menu
class CrudGUI:
    def __init__(self, master):
        self.master = master
        self.master.title('AdvenJ')
        style = Style(master)
        style.configure("TRadiobutton", background="light green",
                        foreground="red", font=("arial", 10, "bold"))

        self.word_frame = tkinter.Frame(self.master)
        self.top_frame = tkinter.Frame(self.master)
        self.bottom_frame = tkinter.Frame(self.master)

        self.radio_var = tkinter.IntVar()
        self.radio_var.set(1)

        self.search_label = tkinter.Label(self.top_frame, text='You have heard many rumors of the powerful demon lord.\nYou have been selected as the chosen one for your skill in battle\nYou must go on your travels and meet this demon lord.\nCan you befriend this powerful creature, or will you need to slay them?\nChoose your weapon, adventurer: ')
        self.search_label.pack()

        # create the radio buttons
        self.sword = tkinter.Radiobutton(self.top_frame, text='Sword', variable=self.radio_var, value=1)
        self.spear = tkinter.Radiobutton(self.top_frame, text='Spear', variable=self.radio_var, value=2)
        self.daggers = tkinter.Radiobutton(self.top_frame, text='Daggers', variable=self.radio_var, value=3)
        self.shield = tkinter.Radiobutton(self.top_frame, text='Shield', variable=self.radio_var, value=4)

        # pack the radio buttons
        self.sword.pack(anchor='w', padx=20)
        self.spear.pack(anchor='w', padx=20)
        self.daggers.pack(anchor='w', padx=20)
        self.shield.pack(anchor='w', padx=20)

        # create ok and quit buttons
        self.ok_button = tkinter.Button(self.bottom_frame, text='OK', command=self.open_menu)
        self.quit_button = tkinter.Button(self.bottom_frame, text='QUIT', command=self.master.destroy)

        # pack the buttons
        self.ok_button.pack(side='left')
        self.quit_button.pack(side='left')

        # pack the frames
        self.word_frame.pack()
        self.top_frame.pack()
        self.bottom_frame.pack()

    def open_menu(self):
        if self.radio_var.get() == 1:
            _ = WeaponGUI(self.master)
        elif self.radio_var.get() == 2:
            _ = WeaponGUI(self.master)
        elif self.radio_var.get() == 3:
            _ = WeaponGUI(self.master)
        elif self.radio_var.get() == 4:
            _ = ShieldGUI(self.master)
        else:
            tkinter.messagebox.showinfo('Function', 'still under construction')


# You choose a weapon  xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

class WeaponGUI:
    def __init__(self, master):

        # open the file, load to customers, close file. Do in each class
        try:
            input_file = open("customer_file.dat", 'rb')
            self.customers = pickle.load(input_file)
            input_file.close()
        except (FileNotFoundError, IOError):
            self.customers = {}

        # tkinter.Toplevel() is like tkinter.Frame() but it opens in a new window
        self.look = tkinter.Toplevel(master)
        self.look.title('AdvenJ')

        # create Frames for this Toplevel window
        self.top_frame = tkinter.Frame(self.look)
        self.bottom_frame = tkinter.Frame(self.look)

        self.radio_var = tkinter.IntVar()
        self.radio_var.set(1)

        # widgets for top frame - label and entry box for name
        self.text = tkinter.Radiobutton(self.top_frame, text='You set out on your\njourney to encounter the demon lord.', variable=self.radio_var, value=1)

        # pack top frame
        self.text.pack(anchor='w', padx=20)

        # buttons for bottom frame
        self.ok_button = tkinter.Button(self.bottom_frame, text='OK', command=self.open_menu)

        # pack bottom frame
        self.ok_button.pack()

        # pack frames
        self.top_frame.pack()
        self.bottom_frame.pack()

    def open_menu(self):
        if self.radio_var.get() == 1:
            _ = Weapon1GUI()
            self.look.destroy()
        else:
            tkinter.messagebox.showinfo('Function', 'still under construction')


# First encounter with weapon  xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

class Weapon1GUI:
    def __init__(self):

        # open the file, load to customers, close file. Do in each class
        try:
            input_file = open("customer_file.dat", 'rb')
            self.customers = pickle.load(input_file)
            input_file.close()
        except (FileNotFoundError, IOError):
            self.customers = {}

        # tkinter.Toplevel() is like tkinter.Frame() but it opens in a new window
        self.look = tkinter.Toplevel()
        self.look.title('AdvenJ')

        # create Frames for this Toplevel window
        self.top_frame = tkinter.Frame(self.look)
        self.bottom_frame = tkinter.Frame(self.look)

        self.radio_var = tkinter.IntVar()
        self.radio_var.set(1)

        # widgets for top frame - label and entry box for name
        self.text = tkinter.Label(self.top_frame, text='You encounter a small group\n of goblins, what will you do?')
        self.attack = tkinter.Radiobutton(self.top_frame, text='Attack', variable=self.radio_var, value=1, foreground="red")
        self.flee = tkinter.Radiobutton(self.top_frame, text='Flee', variable=self.radio_var, value=2, foreground="blue")

        # pack top frame
        self.text.pack(anchor='w', padx=20)
        self.attack.pack(anchor='w', padx=20)
        self.flee.pack(anchor='w', padx=20)

        # buttons for bottom frame
        self.ok_button = tkinter.Button(self.bottom_frame, text='OK', command=self.open_menu)

        # pack bottom frame
        self.ok_button.pack()

        # pack frames
        self.top_frame.pack()
        self.bottom_frame.pack()

    def open_menu(self):
        if self.radio_var.get() == 1:
            _ = WeaponBadGUI()
            self.look.destroy()
        elif self.radio_var.get() == 2:
            _ = WeaponFleeGUI()
            self.look.destroy()
        else:
            tkinter.messagebox.showinfo('Function', 'still under construction')


